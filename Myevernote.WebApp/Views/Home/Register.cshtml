@using Myevernote.Entities.ViewModels
@model RegisterViewModel

@{
    ViewBag.Title = "Register";
}
<link href="~/Content/Login.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <div style="margin-top:25px;" class="col-xs-12 col-sm-8 col-md-12 ">
        <form role="form">
            <fieldset>
                <h2>Lütfen Üye Olunuz</h2>
                @Html.ValidationSummary(false)
                <hr class="colorgraph">
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.Username, new { @class = "form-control input-lg", placeholder = "Kullanıcı Adınız" })

                </div>
                <div class="form-group">
                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control input-lg", placeholder = "Email adresiniz" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control input-lg", placeholder = "Şifreniz", type = "password" })
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(Model => Model.RePass, new { @class = "form-control input-lg", placeholder = "Şifreniz Tekrar", type = "password" })
                    </div>

                    <hr class="colorgraph">
                    <div class="row">
                   
                        <div class="col-xs-12 col-sm-12 col-md-12">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Kayıt Ol" /> 
                            
                        </div>
                    </div>
            </fieldset>
        </form>
    </div>
}




<script>
    $(function () {
        $("footer").hide();
        $("#hideforlogin").hide();
    });

</script>

